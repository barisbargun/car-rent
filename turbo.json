{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": [
    "DEV",
    "MODE",
    "ADMIN_URL",
    "CLIENT_URL",
    "SERVER_URL",
    "CLOUDINARY_URL",
    "PORT",
    "REDIS_URL",
    "ACCESS_TOKEN_SECRET",
    "REFRESH_TOKEN_SECRET",
    "CLOUD_NAME",
    "API_KEY",
    "API_SECRET",
    "MONGO_URI"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": ["MY_API_URL", "MY_API_KEY"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["MY_API_URL", "MY_API_KEY"]
    }
  }
}
