{
  "name": "car_rent",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:admin": "turbo dev --filter admin",
    "dev:client": "turbo dev --filter client",
    "dev:server": "turbo dev --filter server",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "prepare": "husky"
  },
  "lint-staged": {
    "apps/admin/**/*.{js,ts,jsx,tsx}": [
      "pnpm run --prefix apps/admin lint"
    ],
    "apps/client/**/*.{js,ts,jsx,tsx}": [
      "pnpm run --prefix apps/client lint"
    ],
    "apps/server/**/*.{js,ts}": [
      "pnpm run --prefix apps/server lint"
    ],
    "*.{js,jsx,ts,tsx,html,css,json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "eslint": "^9.21.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.3",
    "turbo": "^2.4.4",
    "typescript": "^5.8.2"
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=18"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@swc/core",
      "esbuild",
      "msw"
    ]
  }
}
